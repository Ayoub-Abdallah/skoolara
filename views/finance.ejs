            <!-- <h1>Analyses</h1> -->
            <div class="analyseContainer">
                <div id="analyse-chart">
                    <canvas id="analyseChart"></canvas>
                </div>
                <div id="pieChart">
                    <canvas id="myPieChart" width="400" height="400"></canvas>
                </div>
            </div>

        </section>
        <!-- End of Middle -->
        <!-- income details start -->

        <div class="back-cover income-details-cover">
